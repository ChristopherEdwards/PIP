<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="com.sanchez.profile.schema.schemaeditor"
   name="Schema Editor Plug-in"
   version="3.3.2"
   provider-name="Sanchez"
   class="com.sanchez.profile.schema.schemaeditor.SchemaEditorPlugin">

   <runtime>
      <library name="schemaeditor.jar">
         <export
               name="*">
         </export>
      </library>
      <library name="xercesImpl.jar">
         <export
               name="*">
         </export>
      </library> 
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime.compatibility"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="com.fnf.studio"/>
      <import plugin="com.fnf.profile.ide"/>
   </requires>


   
   <extension
      id="com.sanchez.profile.schema.schemaeditor.wizards"
      name="Entity"
      point="org.eclipse.ui.newWizards">
      <wizard
         name="New Table"
         icon="icons/wizard.gif"
         category="com.fnf.profile.ide.category"
         class="com.sanchez.profile.schema.schemaeditor.wizards.NewEntityWizard"
         id="com.sanchez.profile.schema.schemaeditor.wizards.NewEntityWizard">
      <description>
      	Entity information
      </description>
       <selection class="org.eclipse.core.resources.IResource"/>
   </wizard>
</extension>

<extension
      id="com.sanchez.profile.schema.schemaeditor.wizards"
      name="Attribute"
      point="org.eclipse.ui.newWizards">
      <wizard
         name="New Column"
         icon="icons/wizard.gif"
         category="com.fnf.profile.ide.category"
         class="com.sanchez.profile.schema.schemaeditor.wizards.NewAttributeWizard"
         id="com.sanchez.profile.schema.schemaeditor.wizards.NewAttributeWizard">
      <description>
      	Attribute information
      </description>
       <selection class="org.eclipse.core.resources.IResource"/>
   </wizard>
</extension>


