<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="com.fis.workbench"
   name="%pluginName"
   version="3.3.1"
   provider-name="%providerName"
   class="com.fis.workbench.WorkbenchPlugin">

   <runtime>
      <library name="workbench.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
	  <import plugin="org.eclipse.core.resources" />
	  <import plugin="org.eclipse.core.runtime" />
      <import plugin="org.eclipse.ui" />
      <import plugin="org.eclipse.help.ui"/>
      <import plugin="org.eclipse.ui.intro"/>
      <import plugin="org.eclipse.ui.console"/>
      <import plugin="org.eclipse.help.webapp"/>
      <import plugin="org.eclipse.help"/>
      <import plugin="org.eclipse.help.appserver"/>
      <import plugin="org.eclipse.help.base"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.search"/>
      <import plugin="org.eclipse.debug.ui"/>
   </requires>
   
    <!-- =============================================== -->
	<!-- workbench product	            		        -->
	<!-- =============================================== -->
 <extension
         id="workbenchproduct"
         point="org.eclipse.core.runtime.products">
      <product
          application="org.eclipse.ui.ide.workbench"
            name="FIS Workbench">
         <property
               name="windowImages"
               value="icons/Welcome_16.gif,icons/Welcome_32.gif,icons/Welcome_48.gif">
         </property>
         <property
               name="aboutText"
               value="%productBlurb">
         </property>
         <property
               name="aboutImage"
               value="icons/Welcome_48.gif">
         </property>
         <property
               name="startupForegroundColor"
               value="FFFFFF">
         </property>
         <property
               name="startupProgressRect"
               value="0,280,453,15">
         </property>
         <property
               name="startupMessageRect"
               value="0,260,453,15">
         </property>
         <property
               name="appName"
               value="FIS Workbench">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   
   <extension
       point="org.eclipse.ui.intro">
    <intro
          class="org.eclipse.ui.intro.config.CustomizableIntroPart"
          icon="icons/Welcome_16.gif"
          id="com.fis.workbench.intro"/>
    <introProductBinding
          introId="com.fis.workbench.intro"
          productId="com.fis.workbench.product"/>
    <intro
          class="org.eclipse.ui.intro.config.CustomizableIntroPart"
          id="com.fis.workbench.intro">
    </intro>
    <introProductBinding
          introId="com.fis.workbench.intro"
          productId="com.fis.workbench.workbenchproduct">
    </introProductBinding>
 </extension>
      
   
   
     <extension
         point="org.eclipse.ui.intro.config">
      <config
            content="introContent.xml"
            id="org.eclipse.platform.introConfig"
            introId="com.fis.workbench.intro">
         <presentation
               home-page-id="root" standby-page-id="standby">
            <implementation
                  ws="win32"
                  style="css/shared.css"
                  kind="html"
                  os="win32">
            </implementation>
            <implementation
                  kind="swt">
            </implementation>
         </presentation>

      </config>

</extension>  
    
 	<!-- =============================================== -->
	<!-- online help and context Help for abbreviations  -->
	<!-- =============================================== -->

	<extension point="org.eclipse.help.toc">
		<toc primary="true" file="toc.xml" />
	</extension>
 
 
   
  

</plugin>
