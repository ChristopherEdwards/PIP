<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin
   id="com.fnf.ui.editor.simplexml"
   name="SimpleXML Plug-in"
   version="3.3.1"
   provider-name="FIS"
   class="com.fnf.ui.editor.simplexml.SimplexmlPlugin">
   
      <runtime>
      <library name="simplexml.jar">
         <export name="*"/>
      </library>
   </runtime>
   
   
   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jface.text" export="true"/>
      <import plugin="org.eclipse.ui.editors" export="true"/>
      <import plugin="org.eclipse.ui.workbench.texteditor" export="true"/>
   </requires>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Simple XML Editor"
            extensions="xml"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="com.fnf.ui.editor.simplexml.SimpleXMLEditor"
            id="com.fnf.ui.editor.simplexml.SimpleXMLEditor">
      </editor>
   </extension>

</plugin>
