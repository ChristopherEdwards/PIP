DEPMDT(RecordDEP dep)	// Extend maturity date by length of term
	/*

	     ORIG:  Allan R. Mattson (6915) - 05/21/87
	CALLED BY: ^DEPPI

	---- Revision History -------------------------------------------------

	06/13/02 - ZWITKOWITSM - 43583
		   Converted to PSL.

	-----------------------------------------------------------------------
	*/

	new ODT,MDT,TRM

	set TRM=dep.trm

	// Scheduled Deposit Processing
	// Extend one month from the effective date for scheduled deposit accounts
	if dep.schproc set TRM="1M"

	if TRM="" quit 

	set ODT=$S(%EffectiveDate:%EffectiveDate,1:%SystemDate)
	set MDT=$$EXT^UMDT(TRM,ODT,0,dep.busopt,dep.nbdc)

	if ER quit 

	// Account Maturity Date
	if MDT>dep.mdt set dep.mdt=MDT

	quit 
 #OPTION ResultClass ON
Public String vSIG()	quit "59861^60439^Laura Hillanbrand^631"	// Signature - LTD^TIME^USER^SIZE
