  if SDM="" set MSDM="" quit
  if SDM="SPD" set MSDM=$$^MSG(8538)
  set MSDM=$$^MSG(8539)
 }
 set DDM=lnapchge.ddm do {
  if DDM="" set MDDM="" quit
  if DDM="SPD" set MDDM=$$^MSG(8536)
  set MDDM=$$^MSG(8537)
 }
 set (MSG1,MSG2,MSG3,MSG4,MSG5,MSG6)=""
 
