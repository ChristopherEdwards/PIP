V00S240(%ProcessMode,RecordEFTPAY fEFTPAY,RecordDEP DEP)   // -  - SID= <INTSFPBR00> Standing Foreign Payment Screen Linkage
 ;;Copyright(c)2006 Sanchez Computer Associates, Inc.  All Rights Reserved - 08/24/2006 11:25 - kini
 	/*
 	ORIG: CHENARDP - 02/27/2003
 	DESC: Linked Screen Template

 	---- Comments --------------------------------------------------------
	This procedure is used as the base template for the PSL screen compiler.
	It is referenced by the PSL screen compiler - procedure DBS2PSL4


	 ---- Revision History ------------------------------------------------
	09/24/03 - Pete Chenard - 45497
		       Created linked screen template for screen compiler.
	-----------------------------------------------------------------------

	 */
 
V0 
 set VSID="INTSFPBR00"
 set KVAR="kill %A,%TAB,vtab,VFSN,%OLD,%NEW,%FILE,%INDEX,%PAGE,%PG,UX,MULSCR"
 set:'$D(%PG) %PG=1 set %PAG=%PG+1 set %PAGE=$S($D(%PAGE):%PAGE-1,1:0)+2
 set vPSL=1  //compiled for PSL
 //
 set VPG(%PG+0)="Standing Foreign Payment Screen 1|INTSFPBR10"
 set VPG(%PG+1)="Standing Foreign Payment Screen 2|INTSFPBR20"
	set:'$D(%PG) %PG=1 set %PGSV=%PG,MULSCR=""
 if '%ProcessMode do VNEW(.fEFTPAY,.DEP)
 if %ProcessMode do VLOD(.fEFTPAY,.DEP) if $G(ER) set VFMQ="Q" quit
 do VPG(.fEFTPAY,.DEP)
 quit

VNEW(RecordEFTPAY fEFTPAY,RecordDEP DEP)
 
 quit
 //
 ;
VLOD(RecordEFTPAY fEFTPAY,RecordDEP DEP)  // User defined access section
	quit

VPG(RecordEFTPAY fEFTPAY,RecordDEP DEP)
 new vDONE
 set vDONE=0
 for  do { quit:vDONE
  if %PG=(%PGSV+0) do VPG1(.fEFTPAY,.DEP),VPG0(.fEFTPAY,.DEP) quit:vDONE
  if %PG=(%PGSV+1) do VPG2(.fEFTPAY,.DEP),VPG0(.fEFTPAY,.DEP) quit:vDONE
  }
 quit

VPG0(RecordEFTPAY fEFTPAY,RecordDEP DEP)
 set %LINK=""
 if %ProcessMode=2!(%ProcessMode=3)!(%ProcessMode=4) do VBTM(.fEFTPAY,.DEP) if $G(VFMQ)="D" set vDONE=1 quit
 if '$D(%PAGE) set vDONE=1 quit
 if %PG'<%PAG kill %PAG,%PGSV,VPG set vDONE=1 quit
 set %PG=%PG+1
 quit

 
VPG1(RecordEFTPAY fEFTPAY,RecordDEP DEP)  // Standing Foreign Payment Screen 1
 
 new x
 set SID="INTSFPBR10",DFID="EFTPAY"
 do ^USID if PGM="" set ET="INVLDSCR" do ^UTLERR Q
 kill VPTBL
 set VPGM=PGM
 do VREPRNT^V00S243
 if %ProcessMode>1 quit
 do VTAB^V00S243(.fEFTPAY)
 quit
 
VPG2(RecordEFTPAY fEFTPAY,RecordDEP DEP)  // Standing Foreign Payment Screen 2
 
 new x
 set SID="INTSFPBR20",DFID="EFTPAY"
 do ^USID if PGM="" set ET="INVLDSCR" do ^UTLERR Q
 kill VPTBL
 set VPGM=PGM
 do VREPRNT^V00S244
 if %ProcessMode>1 quit
 do VTAB^V00S244(.fEFTPAY,.DEP)
 quit
 

VBTM(RecordEFTPAY fEFTPAY,RecordDEP DEP)

	if %ProcessMode=4,IO'=$P quit
	do ^DBSCRT8A
	quit
