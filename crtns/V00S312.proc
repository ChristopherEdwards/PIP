 	/*
 	ORIG: CHENARDP - 02/27/2003
 	DESC: Linked Screen Template

 	---- Comments --------------------------------------------------------
	This procedure is used as the base template for the PSL screen compiler.
	It is referenced by the PSL screen compiler - procedure DBS2PSL4


	 ---- Revision History ------------------------------------------------
	09/24/03 - Pete Chenard - 45497
		       Created linked screen template for screen compiler.
	-----------------------------------------------------------------------

	 */
 
V0 
 set VSID="LNPOPT"
 set KVAR="kill %A,%TAB,vtab,VFSN,%OLD,%NEW,%FILE,%INDEX,%PAGE,%PG,UX,MULSCR"
 set:'$D(%PG) %PG=1 set %PAG=%PG+1 set %PAGE=$S($D(%PAGE):%PAGE-1,1:0)+2
 set vPSL=1  //compiled for PSL
 //
 set VPG(%PG+0)="Loan Late Charge Methods - Page 1|LNPOPT1"
 set VPG(%PG+1)="Loan Late Charge Methods - Page 2|LNPOPT2"
	set:'$D(%PG) %PG=1 set %PGSV=%PG,MULSCR=""
 if '%ProcessMode do VNEW(.fLNPOPT)
 if %ProcessMode do VLOD(.fLNPOPT) if $G(ER) set VFMQ="Q" quit
 do VPG(.fLNPOPT)
 quit

VNEW(RecordLNPOPT fLNPOPT)
 
 quit
 //
 ;
VLOD(RecordLNPOPT fLNPOPT)  // User defined access section
	quit

VPG(RecordLNPOPT fLNPOPT)
 new vDONE
 set vDONE=0
 for  do { quit:vDONE
  if %PG=(%PGSV+0) do VPG1(.fLNPOPT),VPG0(.fLNPOPT) quit:vDONE
  if %PG=(%PGSV+1) do VPG2(.fLNPOPT),VPG0(.fLNPOPT) quit:vDONE
  }
 quit

VPG0(RecordLNPOPT fLNPOPT)
 set %LINK=""
 if %ProcessMode=2!(%ProcessMode=3)!(%ProcessMode=4) do VBTM(.fLNPOPT) if $G(VFMQ)="D" set vDONE=1 quit
 if '$D(%PAGE) set vDONE=1 quit
 if %PG'<%PAG kill %PAG,%PGSV,VPG set vDONE=1 quit
 set %PG=%PG+1
 quit

 
VPG1(RecordLNPOPT fLNPOPT)  // Loan Late Charge Methods - Page 1
 
 new x
 set SID="LNPOPT1",DFID="LNPOPT"
 do ^USID if PGM="" set ET="INVLDSCR" do ^UTLERR Q
 kill VPTBL
 set VPGM=PGM
 do VREPRNT^V00S315
 if %ProcessMode>1 quit
 do VTAB^V00S315(.fLNPOPT)
 quit
 
VPG2(RecordLNPOPT fLNPOPT)  // Loan Late Charge Methods - Page 2
 
 new x
 set SID="LNPOPT2",DFID="LNPOPT"
 do ^USID if PGM="" set ET="INVLDSCR" do ^UTLERR Q
 kill VPTBL
 set VPGM=PGM
 do VREPRNT^V00S316
 if %ProcessMode>1 quit
 do VTAB^V00S316(.fLNPOPT)
 quit
 

VBTM(RecordLNPOPT fLNPOPT)

	if %ProcessMode=4,IO'=$P quit
	do ^DBSCRT8A
	quit
