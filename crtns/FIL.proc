	quit

public BLK(String VAL,Number N)     // fill the field with blank space
        
	if VAL.length()>N quit VAL.extract(1,N)
	quit VAL_" ".justify(N).extract(1,N-VAL.length())
        
public ZERO(Number VAL,Number N,Number DEC,String TYP)         // fill the field with leading zeros

        type public String RM,SIGN,X
        type Number FCT

	set TYP=TYP.get()
	
	set X=""
	set SIGN=""
	if TYP="$" do {
		set SIGN=0
		set N=N-1
		}
        if 'DEC.exists() do {
        	set FCT=1
        	set DEC=0
        	}
        else  set FCT=10**DEC
	        
	if TYP.get()="$",VAL<0 do {
		set VAL=VAL*(-1)
		set SIGN="-"
		}
        set VAL=VAL.roundDec(DEC)
        set VAL=VAL*FCT
        if VAL.toString().length()>N set RM="Value ~"_VAL_" larger than "_N do EXC set VAL=0
	set X.piece(0,N-VAL.toString().length())=0 set VAL=X_VAL
        quit SIGN_VAL

EXC     // log error to DAYEND

	type public Number CID,XCID,XC
	type public String %ZTSEQ,DESC,ET,RM
	
        if RM.get().isNull() set RM=ET.get()
        do LOG^UTLEXC($T(+0),"*",DESC.get(),XCID.get(CID.get()),%ZTSEQ.get(),RM.get())
        kill ET,%ZTSEQ
        quit

