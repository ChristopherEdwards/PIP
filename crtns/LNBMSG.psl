LNBMSG	
		 
	/*
	Maintain Loan Bill Marketing Message - table LNBMSG

	---- Revision History -------------------------------------------------
	05/01/06 - RussellDS - CR20967
		   Created.

	-----------------------------------------------------------------------
	*/
	
	type Number I
	type String ML(), VFMQ
	
	for I = 1:1:3 set ML(I) = ""
	
	type ResultSet rs = Db.select("MSGSEQ,ML", "LNBMSG")
	
	while rs.next() set ML(rs.getCol("MSGSEQ")) = rs.getCol("ML")
	
	do DRV^USID(0, "LNBMSG") quit:(VFMQ = "Q")
	
	// Remove old entry before adding new
	do Db.delete("LNBMSG")
	
	for I = 1:1:3 do {
		
		type RecordLNBMSG lnbmsg = Class.new("RecordLNBMSG", "MSGSEQ=:I")
		
		set lnbmsg.ml = ML(I)
		
		do lnbmsg.save()
	}
	
	quit
 #OPTION ResultClass ON
Public String vSIG()	quit "60425^3141^Dan Russell^682"	// Signature - LTD^TIME^USER^SIZE
