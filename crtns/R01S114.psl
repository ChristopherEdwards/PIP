VRSUM	// Report Summary
	type Public Number IOSL,verror,VFMQ,vh,VLC,VT(),VX()
	type Public String AST,BAL,BJD,CID,COURTMSG,CPMT,DESC,EFD,EJD,ESC,ETC,HISTDATE,HSTMSG,ITC,LCID,PGN,PMT,PMTPI,PMTTRS,RMT,TAMT,TRTYPE,TSEQ,TSO,TT,UTBL(),UTSO(),VSKIPREC,fHIST,vovc1,vovc2
